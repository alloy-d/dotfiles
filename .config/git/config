[alias]
  ci = commit
  co = checkout
  d  = difftool
  st = status --short
  pr = pull-request
  current = rev-parse --abbrev-ref HEAD
  autocommit = !"git commit -m \"$(curl -s 'http://whatthecommit.com' | grep -A1 'id=\"content\"' | tail -n 1 | tr -d '<p>')\""
  lol = log --oneline --graph --decorate
[color]
  ui = auto
[commit]
  gpgsign = yes
[core]
  editor = nvim
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool "nvim diff"]
  cmd = nvim -R -d \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[diff]
  tool = nvim diff
[pull]
  rebase = true
[push]
  default = simple
[gpg]
  program = gpg
